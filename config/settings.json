{
  "pet": {
    "name": "Pixie",
    "personality": "helpful and friendly",
    "size": {
      "width": 270,
      "height": 270
    },
    "position": {
      "x": 571,
      "y": 197
    },
    "animations": {
      "idle": "assets/pet/idle.gif",
      "thinking": "assets/pet/thinking.gif",
      "speaking": "assets/pet/speaking.gif",
      "enabled": true,
      "fps": 20
    },
    "modern_ui": {
      "enabled": true,
      "glow_effect": true,
      "particle_effects": true,
      "smooth_animations": true
    },
    "width": 210,
    "height": 210
  },
  "ai": {
    "model": "gemini-2.0-flash-exp",
    "temperature": 0.7,
    "max_tokens": 1000,
    "system_prompt": "You are a helpful virtual pet assistant. Be friendly, concise, and provide practical help based on what you see on the user's screen."
  },
  "screen": {
    "capture_interval": 2.0,
    "max_screenshot_size": {
      "width": 1920,
      "height": 1080
    },
    "privacy_blur_regions": []
  },
  "hotkeys": {
    "activate": "ctrl+alt+p",
    "screenshot": "ctrl+alt+s"
  },
  "privacy": {
    "ask_before_screenshot": false,
    "blur_sensitive_info": true,
    "exclude_apps": [
      "password_manager",
      "banking"
    ]
  },
  "ui": {
    "transparency": 0.95,
    "always_on_top": true,
    "click_through": false,
    "theme": "modern",
    "dark_mode": true,
    "effects": {
      "hover_animations": true,
      "fade_transitions": true,
      "glassmorphism": true
    }
  },
  "speech": {
    "spontaneous_comments": true,
    "comment_frequency": 300,
    "reaction_probability": {
      "error": 0.7,
      "success": 0.8,
      "coding": 0.2,
      "idle": 0.1
    },
    "personality": {
      "default_mood": "helpful",
      "traits": [
        "helpful",
        "friendly",
        "curious"
      ],
      "mood_change_probability": 0.4
    },
    "tts": {
      "enabled": true,
      "use_natural_voice": true,
      "british_accent": true,
      "voice_type": "natural_british",
      "fallback_rate": 180,
      "fallback_volume": 0.9
    },
    "voice_input": {
      "enabled": true,
      "language": "en-US",
      "energy_threshold": 300,
      "pause_threshold": 0.8,
      "phrase_time_limit": 5,
      "timeout": 1
    }
  }
}