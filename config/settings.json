{
  "pet": {
    "name": "Pixie",
    "personality": "helpful and friendly",
    "size": {
      "width": 270,
      "height": 270
    },
    "position": {
      "x": 750,
      "y": 320
    },
    "animations": {
      "idle": "assets/pet/idle.gif",
      "thinking": "assets/pet/thinking.gif",
      "speaking": "assets/pet/speaking.gif",
      "enabled": true,
      "fps": 20
    },
    "modern_ui": {
      "enabled": true,
      "glow_effect": true,
      "particle_effects": true,
      "smooth_animations": true
    },
    "width": 210,
    "height": 210
  },
  "ai": {
    "model": "gemini-2.0-flash-exp",
    "temperature": 0.7,
    "max_tokens": 1000,
    "system_prompt": "You are a helpful virtual pet assistant. Be friendly, concise, and provide practical help based on what you see on the user's screen."
  },
  "screen": {
    "capture_interval": 2.0,
    "max_screenshot_size": {
      "width": 1920,
      "height": 1080
    },
    "privacy_blur_regions": []
  },
  "hotkeys": {
    "activate": "ctrl+alt+p",
    "screenshot": "ctrl+alt+s"
  },
  "privacy": {
    "ask_before_screenshot": false,
    "blur_sensitive_info": true,
    "exclude_apps": [
      "password_manager",
      "banking"
    ]
  },
  "ui": {
    "transparency": 0.95,
    "always_on_top": true,
    "click_through": false,
    "theme": "modern",
    "color_scheme": {
      "primary": "#667eea",
      "secondary": "#48c78e",
      "accent": "#FF69B4",
      "background": "#f8f9fa",
      "text": "#2c3e50"
    },
    "effects": {
      "hover_animations": true,
      "fade_transitions": true,
      "glassmorphism": true
    }
  }
}